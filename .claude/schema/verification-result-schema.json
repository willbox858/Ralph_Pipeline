{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VerificationResult",
  "description": "Structured output from the Verifier agent",
  "type": "object",
  "required": ["spec_name", "iteration", "timestamp", "compilation", "tests", "verdict"],
  "properties": {
    "spec_name": {
      "type": "string"
    },
    "iteration": {
      "type": "integer",
      "description": "Which implementation iteration this verifies"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "compilation": {
      "type": "object",
      "required": ["success"],
      "properties": {
        "success": {
          "type": "boolean"
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "file": { "type": "string" },
              "line": { "type": "integer" },
              "column": { "type": "integer" },
              "code": { "type": "string", "description": "Error code like CS1002" },
              "message": { "type": "string" },
              "severity": { 
                "type": "string", 
                "enum": ["error", "warning"] 
              }
            },
            "required": ["file", "message"]
          }
        },
        "warnings_count": {
          "type": "integer"
        }
      }
    },
    "tests": {
      "type": "object",
      "required": ["ran", "total", "passed", "failed", "skipped"],
      "properties": {
        "ran": {
          "type": "boolean",
          "description": "Whether tests were actually executed"
        },
        "total": {
          "type": "integer"
        },
        "passed": {
          "type": "integer"
        },
        "failed": {
          "type": "integer"
        },
        "skipped": {
          "type": "integer"
        },
        "duration_ms": {
          "type": "integer"
        },
        "failures": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["test_name", "message"],
            "properties": {
              "test_name": {
                "type": "string"
              },
              "test_file": {
                "type": "string"
              },
              "criterion_id": {
                "type": "string",
                "description": "Which acceptance criterion this test covers (e.g., AC-001)"
              },
              "message": {
                "type": "string"
              },
              "expected": {
                "type": "string"
              },
              "actual": {
                "type": "string"
              },
              "stack_trace": {
                "type": "string"
              },
              "failure_type": {
                "type": "string",
                "enum": ["assertion", "exception", "timeout", "setup", "other"]
              }
            }
          }
        }
      }
    },
    "files_verified": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string" },
          "exists": { "type": "boolean" },
          "lines": { "type": "integer" }
        }
      },
      "description": "Files from structure.classes that were checked"
    },
    "verdict": {
      "type": "string",
      "enum": ["pass", "fail_compilation", "fail_tests", "fail_missing_files", "error"],
      "description": "Overall result"
    },
    "summary": {
      "type": "string",
      "description": "Human-readable summary of results"
    },
    "suggestions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Specific suggestions for the implementer to fix issues"
    }
  }
}
