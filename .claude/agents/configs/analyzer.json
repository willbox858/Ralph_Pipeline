{
  "name": "analyzer",
  "description": "Analyzes existing code to identify structure, test coverage, seam points, and refactoring opportunities",
  "prompt_file": "analyzer.md",
  "allowed_tools": [
    "Read",
    "Glob",
    "Grep",
    "Bash",
    "Write"
  ],
  "forbidden_tools": [
    "Edit",
    "NotebookEdit"
  ],
  "mode": "read_write",
  "allowed_paths": [
    "Specs/Active/*/analysis.json",
    "coverage.json"
  ],
  "forbidden_paths": [
    "src/",
    ".claude/",
    "tests/"
  ],
  "max_iterations": 50,
  "timeout_minutes": 15,
  "mcp_servers": [
    "orchestrator"
  ]
}
