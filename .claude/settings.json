{
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/orchestrator-singleton.py"
          }
        ]
      },
      {
        "matcher": "Write|Edit|Create|Task|Spawn|Agent|str_replace",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/orchestrator-guard.py"
          }
        ]
      },
      {
        "matcher": "Write|Edit|Create|str_replace",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/scope-guard.py"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/verify-implementation.py",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
