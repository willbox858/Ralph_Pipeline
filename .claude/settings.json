{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|Create|Task|Spawn|Agent|str_replace",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/orchestrator-guard.py\""
          }
        ]
      },
      {
        "matcher": "Write|Edit|Create|str_replace",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/scope-guard.py\""
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/verify-implementation.py\"",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
